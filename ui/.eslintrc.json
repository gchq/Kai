{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "react-app", "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars":"off",
        "@typescript-eslint/no-useless-constructor":"off",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "trailingComma": "es5",
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true,
                "bracketSpacing": true,
                "eslintIntegration": true
            }
          ]
    }
}