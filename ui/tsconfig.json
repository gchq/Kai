{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*.tsx", 
    "./src/**/*.ts",
    "./test/**/*.tsx",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "types": ["node", "jest"]
}
